  <div class="container">
    <h2>Palm Reading Prompt Generator ðŸ”®</h2>
    
    <label for="focus">Fokus Pembacaan:</label>
    <select id="focus">
      <option value="Umum">Kepribadian Umum</option>
      <option value="Cinta">Percintaan</option>
      <option value="Karier">Karier dan Potensi</option>
      <option value="Masa Depan">Masa Depan</option>
      <option value="Spiritual">Spiritualitas</option>
    </select>

    <label for="style">Gaya Bahasa:</label>
    <select id="style">
      <option value="Tradisional">Tradisional dan Spiritualitas</option>
      <option value="Psikologis">Psikologi Modern</option>
      <option value="Lucu">Lucu dan Ringan</option>
      <option value="Puisi">Penuh Metafora / Puisi</option>
    </select>

    <label for="handType">Jenis Tangan (Opsional):</label>
    <select id="handType">
      <option value="Tidak Ditentukan">-</option>
      <option value="Api">Api (penuh semangat)</option>
      <option value="Air">Air (sensitif & intuitif)</option>
      <option value="Udara">Udara (analitis & sosial)</option>
      <option value="Tanah">Tanah (praktis & stabil)</option>
    </select>

    <label for="imageLink">Link Gambar Tangan (Opsional):</label>
    <input type="text" id="imageLink" placeholder="https://...">

    <button onclick="generatePrompt()">Buat Prompt ðŸ“œ</button>

    <div id="output"></div>
  </div>

  <script>
    function generatePrompt() {
      const focus = document.getElementById('focus').value;
      const style = document.getElementById('style').value;
      const handType = document.getElementById('handType').value;
      const imageLink = document.getElementById('imageLink').value;

      let prompt = `Saya mengunggah gambar telapak tangan. Tolong lakukan pembacaan garis tangan berdasarkan prinsip palmistry.\n\n`;

      if (handType !== "Tidak Ditentukan") {
        prompt += `Jenis tangan: ${handType}.\n`;
      }

      if (imageLink.trim()) {
        prompt += `Gambar tangan: ${imageLink}\n\n`;
      }

      prompt += `Fokus pembacaan: ${focus}.\n`;
      prompt += `Gunakan gaya bahasa: ${style}.\n\n`;

      prompt += `Tolong analisis:\n- Garis kehidupan\n- Garis kepala\n- Garis hati\n- Garis takdir dan matahari (jika ada)\n- Gunung-gunung di telapak tangan\n\nTutup dengan kesimpulan tentang kepribadian dan potensi hidup. Jangan lupa tampilkan dengan gaya ${style.toLowerCase()}.`;

      document.getElementById("output").innerText = prompt;
    }
  </script>
